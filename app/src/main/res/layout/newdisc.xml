<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".NewDiscActivity"
    android:background="@drawable/background">


    <ImageView
        android:id="@+id/viewImage"
        android:layout_width="264dp"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher" />

    <Button
        android:id="@+id/buttonPhoto"
        android:layout_width="273dp"
        android:layout_height="41dp"
        android:layout_marginTop="15dp"
        android:text="Take Photo"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnChoose"
        android:layout_width="273dp"
        android:layout_height="41dp"
        android:layout_marginTop="15dp"
        android:text="Choose Photo"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/newDiscTitle"
        android:layout_width="273dp"
        android:layout_height="41dp"
        android:layout_marginTop="15dp"
        android:text=""
        android:textSize="12sp"/>

    <Spinner
        android:id="@+id/stateSpinner"
        android:layout_width="273dp"
        android:layout_height="41dp"
        android:layout_marginTop="15dp"
        android:text="Disc state"
        android:textSize="12sp"/>

    <Spinner
        android:id="@+id/typeSpinner"
        android:layout_width="273dp"
        android:layout_height="41dp"
        android:layout_marginTop="15dp"
        android:hint="Disc Type"
        android:textSize="12sp"/>

    <EditText
        android:id="@+id/newDiscColor"
        android:layout_width="273dp"
        android:layout_height="41dp"
        android:layout_marginTop="15dp"
        android:hint="Color"
        android:textSize="12sp"/>

    <EditText
        android:id="@+id/newDiscPrice"
        android:layout_width="273dp"
        android:layout_height="41dp"
        android:layout_marginTop="15dp"
        android:hint="Price"
        android:inputType="number"
        android:textSize="12sp"/>

    <EditText
        android:id="@+id/newDiscDescription"
        android:layout_width="273dp"
        android:layout_height="41dp"
        android:layout_marginTop="15dp"
        android:hint="Description"
        android:textSize="12sp"/>

    <EditText
        android:id="@+id/newDiscQuantity"
        android:layout_width="273dp"
        android:layout_height="41dp"
        android:layout_marginTop="15dp"
        android:hint="Quantity"
        android:inputType="number"
        android:textSize="12sp"/>

    <Button
        android:id="@+id/submitNewDiscButton"
        android:layout_width="273dp"
        android:layout_height="41dp"
        android:layout_marginTop="15dp"
        android:text="Submit"
        android:textSize="18sp"/>

</LinearLayout>